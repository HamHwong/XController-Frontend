            counter: apiConfig.PRApproverView.Count(getCookie('account'), Enum.prstatus.Completed),
            datasourceAPI: apiConfig.PRApproverView.Paging,
            options: {
              account: getCookie("account"),
              completed: true
            }
          })
        }
        var Detail = function(PRid) {
          PurchaseRequisition.detail(PRid)
        }
