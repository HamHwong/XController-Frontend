        //载入订单管理表操作
        var table_init = function() {
          generateTableWithPageHelper({
            target: "#applying",
            templateOpts: tableStructures.Employee.Approval.Applying,
            counter: apiConfig.PRApproverView.Count(getCookie('account'), Enum.prstatus.Progress),
