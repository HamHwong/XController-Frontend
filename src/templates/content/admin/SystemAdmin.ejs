<div class="contentTitle clearfix">
  <h3>系统管理员</h3>
  <div class="form-group pull-right col-xs-12 col-sm-6 col-md-4" id="tableQuery">
    <div class="form-group col-xs-9">
      <input type="text" class="form-control searchBox" name="search_box" id="search_box" placeholder="在这里输入关键字" />
    </div>
    <button type="submit" class="btn btn-primary col-xs-3 searchBtn">查询</button>
  </div>
</div>

<div class="operation-menu">
  <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#Add">添加管理员</button>
</div>

<div class="table-content tab-content">
  <div class="tab-pane active" id="Admin-table-container">
    <table class="table table-bordered table-hover">
    </table>
  </div>
</div>
<%-include('/components/modal/modal',{type:"Admin.SystemAdmin.Add"})%>
  <%-include('/components/modal/modal',{type:"Admin.SystemAdmin.Edit"})%>
    <%-include('/components/modal/modal',{type:"Common.Delete"})%>
      <script>
        //载入供应商表操作
        var table_init = function() {
          generateTableWithPageHelper({
            target: "#Admin-table-container",
            templateOpts: tableStructures.Admin.SystemAdmin.SystemUser,
            counter: apiConfig.systemuser.Count(),
            datasourceAPI: apiConfig.systemuser.Paging,
            options: {}
          })
        }
        //删除供应商操作
        var Delete = function(rid) {
          $("#Delete")
            .modal()
        }
        var deleteSubmit = function() {
          if (window.target) {
            var id = window.target["_id"]
            var result = apiConfig.systemuser.Delete(id)
            if (result == true) {
              new MessageAlert("删除成功", MessageAlert.Status.SUCCESS)
            } else {
              new MessageAlert("添加失败", MessageAlert.Status.EXCEPTION)
            }
            $("#Delete").modal("hide")
          }
          table_init()
        }
        //编辑供应商操作
        var edit = function(rid) {
          window.target = apiConfig.systemuser.Get(rid)
          autoComplateInfo(window.target, "#edit_Admin")
          var search = function() {}
          $("#Edit")
            .modal()
        }
        var search = function() {
          var keyword = filterXSS($("input.searchBox").val().trim())
          if ("" == keyword) {
            table_init()
            return
          }
          generateTableWithPageHelper({
            target: "#Admin-table-container",
            templateOpts: tableStructures.Admin.SystemAdmin.SystemUser,
            counter: apiConfig.systemuser.Count(),
            datasourceAPI: apiConfig.systemuser.Search,
            options: {
              keyword: keyword
            }
          })
        }
      </script>
