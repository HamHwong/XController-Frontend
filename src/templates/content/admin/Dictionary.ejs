      <script>
        // var CurrentTableList = {
        //   "#Brochure-table-container": "./test/admin/Brochure/Inventory.json"
        // }
        //载入物品操作
        var table_init = function() {
          var templateOpts = tableStructures.Admin.Dictionary
          new table().loadFromTemplateJson("/api/optionlist/top(100)", templateOpts).to("#Brochure-table-container")
        }

        //删除物品记录操作
        var del = function(rid) {
          window._target = apiConfig.optionlist.Get(rid)
          $("#Delete")
            .modal()
        }
        var deleteSubmit = function() {
          if (window._target) {
            var id = window._target["_id"]
            apiConfig.optionlist.Delete(id)
            $("#Delete").modal("hide")
          }
          table_init()
        }
        //编辑操作
        var edit = function(rid) {
          window._target = apiConfig.optionlist.Get(rid)
          autoComplateInfo(window._target, "#edit_Option")
          $("#Edit")
            .modal()
        }
        var search = function() {
          var keyword = filterXSS($("input.searchBox").val().trim())
          var templateOpts = tableStructures.Admin.Dictionary
          var result = apiConfig.optionlist.Search(keyword)
          new table().loadFromTemplateJson(result, templateOpts).to("#Brochure-table-container")
        }
      </script>
