<div class="contentTitle clearfix">
  <h3>代理商</h3>
  <div class="form-group pull-right col-xs-12 col-sm-6 col-md-4" id="tableQuery">
    <div class="form-group col-xs-9">
      <input type="text" class="form-control searchBox" name="search_box" id="search_box" placeholder="在这里输入关键字" />
    </div>
    <button type="submit" class="btn btn-primary col-xs-3 searchBtn">查询</button>
  </div>
</div>

<div class="operation-menu">
  <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#Add">添加代理商</button>
</div>

<div class="table-content tab-content">
  <div class="tab-pane active" id="Dealer-table-container">
    <table class="table table-bordered table-hover">
    </table>
  </div>
</div>
<%-include('/components/modal/modal',{type:"Admin.DealerAdmin.Add"})%>
  <%-include('/components/modal/modal',{type:"Admin.DealerAdmin.Edit"})%>
    <%-include('/components/modal/modal',{type:"Common.Delete"})%>
      <script>
        //载入代理商表操作
        var table_init = function() {
          generateTableWithPageHelper({
            target: "#Dealer-table-container",
            templateOpts: tableStructures.Admin.DealerAdmin.Dealer,
            counter: apiConfig.dealer.Count(),
            datasourceAPI: apiConfig.dealer.Paging,
            options: {}
          })
        }

        //删除代理商操作
        var del = function(rid) {
          DealerAdmin.view.delete.show(rid)
        }
        var deleteSubmit = function() {
          if (window._target) {
            var id = window._target["_id"]
            apiConfig.dealer.Delete(id)
            DealerAdmin.view.delete.hide()
          }
          table_init()
        }
        //编辑代理商操作
        var edit = function(rid) {
          DealerAdmin.view.edit.show(rid)
        }

        var search = function() {
          var keyword = filterXSS($("input.searchBox").val().trim())
          if ("" == keyword) {
            table_init()
            return
          }
          generateTableWithPageHelper({
            target: "#Dealer-table-container",
            templateOpts: tableStructures.Admin.DealerAdmin.Dealer,
            counter: apiConfig.dealer.Count(),
            datasourceAPI: apiConfig.dealer.Search,
            options: {
              keyword: keyword
            }
          })
        }
      </script>
