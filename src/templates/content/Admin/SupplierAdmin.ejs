<%-include('/components/modal/modal',{type:"Admin.SupplierAdmin.Add"})%>
  <%-include('/components/modal/modal',{type:"Admin.SupplierAdmin.Edit"})%>
    <%-include('/components/modal/modal',{type:"Common.Delete"})%>
      <script>
        //载入供应商表操作
        var table_init = function() {
          var templateOpts = tableStructures.Admin.SupplierAdmin.Supplier
          var dataOrder = ["_id", "_suppliername", "_phonenumber", "_accountname", "_password"]
          new table().loadFromTemplateJson("/api/supplier/top(100)", templateOpts, dataOrder).to("#Supplier-table-container")
        }
        //删除供应商操作
        var del = function(rid) {
          window._target = apiConfig.supplier.Get(rid)
          $("#Delete")
            .modal()
        }
        var deleteSubmit = function() {
          if (window._target) {
            var id = window._target["_id"]
            apiConfig.supplier.Delete(id)
            $("#Delete").modal("hide")
          }
          table_init()
        }
        var search=function() {}
        //编辑供应商操作
        var edit = function(rid) {
          window._target = apiConfig.supplier.Get(rid)
          autoComplateInfo(window._target, "#edit_Supplier")
          $("#Edit")
            .modal()
        }
        var search = function() {
          var keyword = filterXSS($("input.searchBox").val().trim())
          var templateOpts = tableStructures.Admin.SupplierAdmin.Supplier
          var dataOrder = ["_id", "_suppliername", "_phonenumber", "_accountname", "_password"]
          var result = apiConfig.supplier.Search(keyword)
          console.log(result)
          new table().loadFromTemplateJson(result, templateOpts, dataOrder).to("#Supplier-table-container")
        }
      </script>
