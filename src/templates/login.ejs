  function formToSet(form) {
    form = $(form)
    var formArr = form
      .serializeArray()
    var set = {}
    for (var record of formArr) {
      var key = record["name"]
      var value = record["value"]
      set[key] = value
    }
    return set
  }

  function login() {
    var root = ""
    var set = formToSet("#login_form")
    var username = set["username"]
    var password = set["password"]

    switch (window.role) {
      case 'admin':
      case 'Admin':
        if (apiConfig.systemuser.Login(username, password)) { //BUG
          window.location.href = "./admin-home.html"
          setCookie("auth", "Admin")
          setCookie("name", username)
        }
        break
      case 'dealer':
      case 'Dealer':
        if (apiConfig.dealer.Login(username, password)) {
          window.location.href = "./dealer-home.html"
          setCookie("auth", "Dealer")
          setCookie("name", username)
        }
        break
      case 'supplier':
      case 'Supplier':
        if (apiConfig.supplier.Login(username, password)) {
          window.location.href = "./supplier-home.html"
          setCookie("auth", "Supplier")
          setCookie("name", username)
        }
        break
      case 'sales':
      case 'Sales':
        if (apiConfig.dealer.Login(username, password)) {
          window.location.href = "./dealer-home.html"
          setCookie("auth", "Sales")
          setCookie("name", username)
        }
        break
      case 'zeiss':
      case 'Zeiss':
        if (username.toLowerCase() == "zeiss") {
          window.location.href = "./zeiss-home.html"
          setCookie("auth", "Zeiss")
          setCookie("name", username)
        }
        break
    }
    return false
  }
  $("#role").on('change', function(e) {
    window.role = $("#role").val()
  })
  window.role = $("#role").val()
</script>
