<div class="modal fade lg-modal" id="PurchaseRequisition" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">订单申请</h4>
      </div>
      <div class="modal-body">
        <form class="form" method="post" id="PurchaseRequisition_form">
          <div class="modal-infopart baseInfomation form-group clearfix">

            <div class="form-group col-md-4 col-xs-12">
              <label for="requireAgent">代填:</label>
              <div class="checkbox">
                <label for="requireAgent" class="checkbox-inline"><input type="checkbox" name="requireAgent" id="requireAgent"></label>
              </div>
              <div class="checkbox" id="agentCheck">
                <label for="forEmployee">for Employee:</label>
                <label for="forEmployee" class="radio-inline">
                  <input type="radio" data-value="forEmp" name="agent" >
                </label>
                <label for="forDealer">for Dealer:</label>
                <label for="forDealer" class="radio-inline">
                  <input type="radio" data-value="forDea" name="agent" >
                </label>
              </div>
            </div>

            <div class="form-group col-md-4 col-xs-12">
              <label for="_dealerregion">区域:</label>
              <!--<select class="form-control  optionlist" data-category="代理商区域" name="_dealerregion" id="_dealerregion">
              </select>-->
              <input type="text" class="form-control" name="_dealerregion" id="_dealerregion">
            </div>
            <!--for employee-->
            <div class="form-group col-md-4 col-xs-12 search_box_warp requestorInput" id="forEmployee">
              <label for="requestoremployeefk">申请人:</label>
              <select class="queryinput" name="_requestoremployeefk" id="_requestoremployeefk" data-target="requestoremployeefk" data-source="zeiss" style="display:none;">
              </select>
              <input name="requestoremployeefk" id="requestoremployeefk" placeholder="请输入员工" class="form-control" autocomplete="off" />
              <ul class="dropdown-menu keyhint"></ul>
            </div>
            <!--for dealer-->
            <div class="form-group col-md-4 col-xs-12 search_box_warp requestorInput" id="forDealer">
              <label for="requestordealerfk">申请人:</label>
              <select class="queryinput" name="_requestordealerfk" id="_requestordealerfk" data-target="requestordealerfk" data-source="dealer" style="display:none;">
              </select>
              <input name="requestordealerfk" id="requestordealerfk" placeholder="请输入代理商" class="form-control" autocomplete="off" />
              <ul class="dropdown-menu keyhint"></ul>
            </div>

            <div class="form-group col-md-6 col-xs-12 search_box_warp">
              <label for="submitter">提交人:</label>
              <select class="queryinput" name="_submitter" id="_submitter" data-target="submitter" style="display:none;">
              </select>
              <input name="submitter" id="submitter" placeholder="请输入填写人" class="form-control" autocomplete="off" />
              <ul class="dropdown-menu keyhint"></ul>
            </div>


            <div class="form-group col-md-6 col-xs-12">
              <label for="_purposefk">用途:</label>
              <select name="_purposefk" id="_purposefk" class="form-control optionlist" data-category="产品彩页用途"></select>
            </div>


            <input type="text" name="_requestorfk" id="_requestorfk" value="" hidden>
            <div class="Comments editable col-md-12 col-xs-12">
              <span>备注：</span>
              <textarea name="_comments" rows="4" id="_comments"></textarea>
            </div>
          </div>
          <div class="modal-infopart goodsInfomation">
            <button type="button" id="addPItem" class="btn btn-primary addBtn" onclick="PurchaseItem.view.add()"><span class="glyphicon glyphicon-plus"></span></button>
            <div id="InfomationAddArea">
            </div>
          </div>
        </form>
      </div>
      <div class="modal-footer" id="operation"></div>
    </div>
  </div>
</div>
<%-include('./PurchaseItem')%>
